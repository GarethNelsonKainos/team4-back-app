generator client {
  provider = "prisma-client"
  output   = "../src/generated/"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  APPLICANT
}

model Band {
  bandId   Int       @id @default(autoincrement()) @map("bandid")
  bandName String?   @unique @db.VarChar(100) @map("bandname")
  jobRoles JobRole[]

  @@map("band")
}

model Capability {
  capabilityId   Int       @id @default(autoincrement()) @map("capabilityid")
  capabilityName String?   @unique @db.VarChar(100) @map("capabilityname")
  jobRoles       JobRole[]

  @@map("capability")
}

model Status {
  statusId   Int       @id @default(autoincrement()) @map("statusid")
  statusName String    @unique @db.VarChar(100) @map("statusname")
  jobRoles   JobRole[]

  @@map("status")
}

model JobRole {
  jobRoleId    Int        @id @default(autoincrement()) @map("jobroleid")
  roleName     String     @unique @db.VarChar(200) @map("rolename")
  jobLocation  String     @db.VarChar(100) @map("joblocation")
  capabilityId Int        @map("capabilityid")
  bandId       Int        @map("bandid")
  closingDate  DateTime   @db.Date @map("closingdate")
  description  String     @db.Text @map("description")
  responsibilities String     @db.Text @map("responsibilities")
  sharepointUrl    String     @db.VarChar(500) @map("sharepointurl")
  statusId              Int   @map("statusid")
  numberOfOpenPositions Int   @map("numberofopenpositions")
  
  band         Band       @relation(fields: [bandId], references: [bandId])
  capability   Capability @relation(fields: [capabilityId], references: [capabilityId])
  status       Status     @relation(fields: [statusId], references: [statusId])
  applications Application[]

  @@map("jobroles")
}

model User {
  userId        Int       @id @default(autoincrement()) @map("userid")
  userEmail     String    @unique @db.VarChar(200) @map("useremail")
  userPassword  String    @db.VarChar(255) @map("userpassword")
  userRole      String
  createdAt     DateTime  @default(now()) @map("createdat")
  updatedAt     DateTime  @updatedAt @map("updatedat")
  applications  Application[]

  @@map("user")
}

model Application {
  applicationId     Int               @id @default(autoincrement()) @map("applicationid")
  userId           Int               @map("userid")
  jobRoleId        Int               @map("jobroleid")
  cvUrl            String            @map("cvurl")
  applicationStatus String           @map("applicationstatus")
  appliedAt        DateTime          @default(now()) @map("appliedat")
  updatedAt        DateTime          @updatedAt @map("updatedat")
  
  user             User              @relation(fields: [userId], references: [userId])
  jobRole          JobRole           @relation(fields: [jobRoleId], references: [jobRoleId])

  @@unique([userId, jobRoleId], name: "unique_user_job_application")
  @@map("applications")
}

