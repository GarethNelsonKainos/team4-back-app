# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=your_username
DB_PASSWORD="your_password"

# Database connection URL for Prisma
# Get this by running: npx prisma dev --detach
DATABASE_URL="postgresql://your_username:your_password@localhost:5432/jobSite"

# JWT Configuration
JWT_SECRET=your_secret_key_here
JWT_EXPIRATION=24h
SALT_ROUNDS=15

# API Configuration
API_PORT=8080

# Feature Flags
# Set to true/false to enable/disable features
FEATURE_FLAG_JOB_DETAIL_VIEW=false
FEATURE_FLAG_JOB_APPLY=false
